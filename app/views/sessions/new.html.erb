<%= link_to "Sign Up", new_user_path %>

<h1>Login</h1>
<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>

  <%= f.label :password %>
  <%= f.password_field :password %> <br>

  <%= f.label :confirmation %>
  <%= f.password_field :confirmation %> <br>

  <%= f.submit "Login" %>
<% end %>
